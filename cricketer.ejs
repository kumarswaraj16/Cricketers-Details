<!DOCTYPE html>
<html>

<head>
    <title>
        <%= title %>
    </title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <script defer src="https://use.fontawesome.com/releases/v5.0.6/js/all.js"></script>
</head>

<body>
    <div class="container my-3">
        <div class="row">
            <h1 class="text-center w-50">Search About Cricketers <i class="fa fa-search"></i></h1>
            <div class="col-md-12">
                <form action="/search/" class="form-inline" method="post" role="form">
                    <div class="col-md-3">
                        <div class="form-group">
                            <div class="col-md-12">
                                <input type="text" class="form-control" name="filtername" placeholder="Enter name">
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <div class="col-md-12">
                                <input type="text" class="form-control" name="filtercountry" placeholder="Enter country">
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <div class="col-md-12">
                                <input type="submit" class="form-control btn btn-primary" value="Submit">
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <h1 class="text-center my-4 bg-primary w-25">
        <%= title %>
    </h1>
    <table class="table table-striped table-hover">
        <thead class="text-white bg-dark">

            <tr>
                <th>Name</th>
                <th>Country</th>
                <th>Role</th>
                <th>Matches Played</th>
                <th>Half-Century</th>
                <th>Century</th>
                <th>Wickets</th>
                <th>Catches</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% if(records.length > 0){ %>
                <% records.forEach(function(cricketer) { %>
                    <tr>
                        <td>
                            <%= cricketer.name %>
                        </td>
                        <td>
                            <%= cricketer.country %>
                        </td>
                        <td>
                            <%= cricketer.role %>
                        </td>
                        <td>
                            <%= cricketer.matches %>
                        </td>
                        <td>
                            <%= cricketer.halfCentury %>
                        </td>
                        <td>
                            <%= cricketer.century %>
                        </td>
                        <td>
                            <%= cricketer.wicket %>
                        </td>
                        <td>
                            <%= cricketer.catches %>
                        </td>
                        <td>
                            <a href="/edit/<%= cricketer._id %>" class="btn btn-info"><i class="fa fa-edit"></i></a>
                            <a href="/delete/<%= cricketer._id %>" class="btn btn-danger"><i class="fa fa-trash"></i></a>
                        </td>
                    </tr>
                    <% })} else {%>
                        <tr class="my-3">
                            <td class="badge-success text-center" colspan="9">Sorry , No Records Found :(</td>
                        </tr>
                        <% } %>
        </tbody>

    </table>

    <div class="container" style="margin-left: 30%;">
        <div class="row">
            <div style=" margin-top: 50px" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
                <div class="panel panel-info">
                    <div>
                        <h1 class="text-center badge-secondary">Cricketer's Detail Form</h1>

                    </div>
                    <div class="jumbotron">
                        <form action="/" role="form" class="form-horizontal" method="post">
                            <div class="form-group">
                                <div class="col-md-9">
                                    <input type="text" class="form-control" name="cname" placeholder="Enter name">
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-9">
                                    <input type="text" class="form-control" name="ccountry" placeholder="Enter Nationality">
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-9">
                                    <input type="text" class="form-control" name="crole" placeholder="Enter Role">
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-9">
                                    <input type="text" class="form-control" name="cmatches" placeholder="Enter number of matches">
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-9">
                                    <input type="text" class="form-control" name="chalfcentury" placeholder="Enter Half-Century">
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-9">
                                    <input type="text" class="form-control" name="ccentury" placeholder="Enter Century">
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-9">
                                    <input type="text" class="form-control" name="cwicket" placeholder="Enter number of wickets">
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-9">
                                    <input type="text" class="form-control" name="ccatches" placeholder="Enter number of catches">
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-9">
                                    <input type="submit" class="btn btn-info" value="Submit">
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>

</html>